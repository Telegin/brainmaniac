<%= form_for @story, :html => { :class => 'form-horizontal' } do |f| %>





  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this brainstorm from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>







 <%= f.text_field :title, :class => 'text_field, input-xxlarge', :placeholder => "Title"%> <br />

  <%= f.fields_for [@story, @story.snippets.build], :html => {:class => 'form-horizontal'} do |h| %>
  <div class="control-group">
   <%= h.text_area :content, :class => 'text_area, input-block-level', :placeholder => 'Give an idea for a Brainstorm' %>
  </div>
 <%end %>	
 
 
 How many people are going to participate in Brainstorm?
 <%= f.select :size, options_for_select([ "6", "10", "15", "unlimited" ], "6"), {:prompt => "-- How many people? --"}, :class => 'input-small'%><br />

 
 
 <%= f.text_field :tag_list, :class => 'text_field, input-xxlarge', :placeholder => "Tags (separated by commas)" %> 

 

  <%= f.hidden_field :status, :value => 'editable' %>

  
  <div class="form-actions">
    <%= f.submit "Done", :class => 'btn btn-primary' %>

    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stories_path, :class => 'btn' %>
  </div>
<% end %>
